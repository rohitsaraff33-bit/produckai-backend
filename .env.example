# ===========================================
# ProduckAI Environment Configuration
# ===========================================

# Mode
DEMO_MODE=true

# Database
POSTGRES_USER=produckai
POSTGRES_PASSWORD=produckai_dev_password
POSTGRES_DB=produckai
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/0

# API
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
JWT_SECRET=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Embeddings
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
# Alternative: sentence-transformers/multi-qa-MiniLM-L6-cos-v1
EMBEDDING_DIMENSION=384
EMBEDDING_BATCH_SIZE=32

# Clustering
HDBSCAN_MIN_CLUSTER_SIZE=5
HDBSCAN_MIN_SAMPLES=3
CLUSTERING_MIN_FEEDBACK_COUNT=20

# Scoring weights
SCORE_WEIGHT_FREQUENCY=0.35
SCORE_WEIGHT_ACV=0.30
SCORE_WEIGHT_SENTIMENT=0.10
SCORE_WEIGHT_SEGMENT=0.15
SCORE_WEIGHT_TREND=0.10
SCORE_WEIGHT_DUPLICATE=0.10

# Segment priorities
SEGMENT_PRIORITY_ENT=1.0
SEGMENT_PRIORITY_MM=0.7
SEGMENT_PRIORITY_SMB=0.5

# Slack (live mode - optional)
SLACK_BOT_TOKEN=
SLACK_APP_TOKEN=
SLACK_CHANNELS=general,product-feedback,support
# Required scopes: channels:history, channels:read, users:read

# Jira (live mode - optional)
JIRA_URL=https://your-domain.atlassian.net
JIRA_EMAIL=
JIRA_API_TOKEN=
JIRA_PROJECT_KEYS=PROD,ENG
JIRA_JQL=project in (PROD,ENG) AND created >= -90d

# Linear (stub for v1)
LINEAR_API_KEY=
LINEAR_TEAM_ID=

# Google Docs (live mode - optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REFRESH_TOKEN=
# Note: Use OAuth device or local flow to obtain refresh token
# Required scopes: https://www.googleapis.com/auth/drive.readonly, https://www.googleapis.com/auth/documents.readonly
DRIVE_FOLDER_IDS=
# Comma-separated list of Google Drive folder IDs to ingest from

# Zoom (live mode - optional)
ZOOM_ACCOUNT_LEVEL=false
# Set to "true" if using an account-level app (admin access)
ZOOM_USER_ID=me
# Zoom user ID or email address; use "me" for current user
ZOOM_JWT_OR_OAUTH_TOKEN=
# OAuth access token or JWT token for Zoom API
# Note: Implement OAuth refresh flow for production use
ZOOM_START_DATE=2025-01-01
# Default start date for ingesting recordings (YYYY-MM-DD)
ZOOM_END_DATE=2025-12-31
# Default end date for ingesting recordings (YYYY-MM-DD)
ZOOM_REMOVE_FILLERS=false
# Set to "true" to remove filler words (uh, um) from transcripts

# PII Redaction
PII_REDACTION_ENABLED=true
# Set to "false" to disable PII redaction (emails, phones, URLs, etc.)

# OpenAI (optional - for LLM theme refinement)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# Anthropic Claude (required for competitive intelligence)
ANTHROPIC_API_KEY=
# Required for competitive intelligence agent to process competitor data
# Get your API key from: https://console.anthropic.com/

# Observability
LOG_LEVEL=INFO
OTEL_ENABLED=false
OTEL_EXPORTER_OTLP_ENDPOINT=

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_TELEMETRY_DISABLED=1

# Extension
VITE_API_URL=http://localhost:8000
